Public Sub TableViewArticulos_Data(Row As Integer, Column As Integer)

  sResult = m_OnOff_y_Red.meConn.Exec("SELECT * FROM articulos")

  If (sResult <> Null) Then
    If Row >= 0 Then
      sResult.moveTo(Row)
      Try TableViewArticulos.Data.Text = Str(sResult[Column])
    Endif
  Endif

  If row Mod 2 = 0 Then
    TableViewArticulos.Data.Background = Color.RGB(230, 230, 230)
  Endif

End

